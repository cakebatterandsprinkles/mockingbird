{
  "name": "mockingbird",
  "version": "1.0.0",
  "description": "10 minute journal app created with React.js",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "nodemon server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "deploy": "git push heroku master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cakebatterandsprinkles/mockingbird.git"
  },
  "keywords": [
    "journaling",
    "well-being",
    "daily",
    "fun"
  ],
  "author": "cakebatterandsprinkles",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cakebatterandsprinkles/mockingbird/issues"
  },
  "homepage": "https://github.com/cakebatterandsprinkles/mockingbird#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.2",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.5.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
}
